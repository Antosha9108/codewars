function nthSmallest(arr, pos){
  //your code here
  return arr.sort((a,b)=>a-b)[pos-1]
}

// P array of integer and a number
// R an integer
// E  [3,1,2], 2 => 2 // because 2 is the 2nd smallest number
//   [-5,-1,-6,-18], 4 => -1 because -1 is the 4th smallest element in the array
//   after -18,-6,-5,-6
// P first we can sort the array in ascending order with .sort() method.
//   after that we can return nth element from the array -1 (cause count
//       starts from 0)